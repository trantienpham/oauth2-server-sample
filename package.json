{
  "name": "oauth2-server-sso",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "eslint": "eslint .",
    "eslint:check": "eslint --print-config .eslintrc.js",
    "eslint:fix": "eslint --fix .",
    "prettier": "prettier --loglevel silent --write \"{app/,!(node_modules)/**/}*.js\"",
    "coverage": "NODE_ENV=test nyc check-coverage --lines 80 --reporter=text",
    "server": "babel-node index.js",
    "test": "NODE_ENV=test NODE_PATH=./app ./node_modules/nyc/bin/nyc.js --check-coverage --lines 80 --reporter=text ./node_modules/mocha/bin/mocha --timeout 3000 --require @babel/register --recursive 'app/**/**/*.test.js'",
    "dev": "NODE_ENV=development npm run server | bunyan -o short",
    "build": "rm -rf build && webpack --mode production --config webpack.config.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier && npm run eslint",
      "pre-push": "npm test"
    }
  },
  "dependencies": {
    "bcrypt": "^3.0.6",
    "bunyan": "^1.8.12",
    "dotenv": "^8.0.0",
    "express": "^4.16.4",
    "hashids": "^1.2.2",
    "helmet": "^3.18.0",
    "lodash": "^4.17.11",
    "mysql2": "^1.6.5",
    "oauth2-server": "^3.0.1",
    "sequelize": "^5.9.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.5.0",
    "@babel/node": "^7.5.0",
    "@babel/preset-env": "^7.5.0",
    "@babel/register": "^7.4.4",
    "babel-eslint": "^10.0.2",
    "babel-loader": "^8.0.6",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.3.0",
    "copy-pkg-json-webpack-plugin": "^0.0.38",
    "eslint": "^5.2.0",
    "husky": "^3.0.0",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "prettier": "1.14.3",
    "sqlite3": "^4.0.9",
    "webpack": "^4.35.3",
    "webpack-cli": "^3.3.5",
    "webpack-node-externals": "^1.7.2"
  }
}
